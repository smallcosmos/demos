//m-table 部分有修改.u-unitgroup的样式
.u-unitgroup {
    font-size: 0;   //解决display: inline-block的元素之前产生的间距
    line-height: initial;

    .u-btn{
        margin-right: 16px;
    }
    .u-btn:last-child{
        margin-right: 0;
    }

    .u-check, .u-radio{
        margin-right: 40px;
    }
    .u-check:last-child, .u-radio:last-child {
        margin-right: 0;
    }
    .u-tip {
        margin-top: 0;
    }

    .unitgroup_wrap {
        display: flex;
        align-items: center;
        flex-wrap: wrap;
    }
}

.u-unitgroup-sm {
    font-size: 0;   //解决display: inline-block的元素之前产生的间距
    .u-btn {
        margin-right: 8px;
    }
    .u-btn:last-child{
        margin-right: 0;
    }

    .u-check, .u-radio{
        margin-right: 16px;
        line-height: 24px;
    }
    .u-check:last-child, .u-radio:last-child{
        margin-right: 0;
    }
}