// Component:       `u-img`
// ========================================================================

.u-img {}



// Circle:
// ========================================================================

.u-img.u-img-circle {
    $border-radius: 1000px;
}



// Size Extends:
// ========================================================================

$u-img-extend_size = ($name, $width) {
    .u-img-#{$name} {
        width: $width;
    }
}



///////////////////////////
// Component:       `u-img`
// ========================================================================

.u-img {
    $border-radius: $border-radius-base;
}



// Border:
// ========================================================================

.u-img-border {
    padding: 4px;
    $border: $border-base;
    background: white;
}



// Size Extends:
// ========================================================================

$u-img-extend_size(xs, 150px);
$u-img-extend_size(sm, 200px);
$u-img-extend_size(lg, 300px);
$u-img-extend_size(xl, 400px);