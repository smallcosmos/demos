// Variables
// ========================================================================

$u-loading_z-index = 1050;



// Component:       `u-loading`
// ========================================================================

.u-loading {
    position: fixed;
    display: block;
    text-align: center;
    font-size: 26px;
    line-height: 1;

    z-index: $u-loading_z-index;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;

    > * {
        position: relative;
        top: 50%;
    }
}



/* Static */
.u-loading-static {
    position: static;
    display: inline-block;
    font-size: inherit;

    > * {
        position: static;
    }
}