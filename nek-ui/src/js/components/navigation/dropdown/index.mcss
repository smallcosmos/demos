// Component:       `u-dropdown`
// ========================================================================

.u-dropdown {
    position: relative;
    vertical-align: top;

    .dropdown_bd {
        position: absolute;
        z-index: 1;
        width: 100%;
        top: 100%;
        line-height:normal;
        .m-listview {
            > li > a {
                display: block;
            }
        }

        .u-check,
        .check_box{
            margin-bottom: 0;
        }
    }
}

.u-dropdown.z-dis {
    .dropdown_hd > .u-btn {
        @extend .u-btn.z-dis;
    }
}


