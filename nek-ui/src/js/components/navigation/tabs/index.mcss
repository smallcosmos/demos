// Component:       `m-tab`
// ========================================================================

.m-tabs {
    .tabs_hd {
        @extend .f-lsn;

        > li {
            float: left;
            cursor: pointer;
        }

        > li + li {}

        > li.z-crt {
            //position: relative;
        }

        > li.z-dis {
            cursor: not-allowed;
        }
    }

    .tabs_bd {
        clear: both;
    }
}

/* Disabled */
.m-tabs.z-dis {
    .tabs_hd {
        > li {
            cursor: not-allowed;
        }

        > li.z-crt {
            cursor: default;
        }
    }
}











////////////////////////
$m-tabs_hd_li_margin = 2px;
$m-tabs_hd_li_padding-horizontal = 15px;
$m-tabs_hd_border = #DEEAF2;
$m-tabs-vertical_hd_li_width = 120px;



// Component:       `m-tab`
// ========================================================================

.m-tabs {
    $border-radius: 3px;

    .tabs_hd {
        margin-left: -1px;

        > li {
            padding: 0 $m-tabs_hd_li_padding-horizontal;
            $line-height: 40px;
            color: $color-base;
            border: $border-width-base solid transparent;
            margin-bottom: -$border-width-base;
            background: #FFFFFF;
            border: 1px solid #DEEAF2;
            border-radius: 2px 2px 0 0;
            height: 31px;
            line-height: 32px;
            min-width: 104px;
            text-align: center;
            font-size: 12px;
            border-bottom: none;
            box-sizing: border-box;
        }

        > li + li {
            margin-left: $m-tabs_hd_li_margin;
        }

        > li:hover,    // - Apply hover style also to focus state
        > li:focus {
            color: l-adjust($color-base, 20%);
        }

        > li.z-crt {
            //background: white;
            //color: #444;
            //border-color: $m-tabs_hd_border;
            //$box-shadow: 0 -3px $brand-primary;
            //padding-bottom: $border-width-base;
            border-top: 3px solid #D9244E;
            height: 32px;
            line-height: 28px;
        }

        > li.z-dis {
            color: #999;
            background: none;
            border-color: transparent;
        }
    }

    .tabs_bd {
        background: white;
        border-top: $border-width-base solid $m-tabs_hd_border;
        padding: 20px 0;
    }
}

/* Disabled */
.m-tabs.z-dis {
    .tabs_hd {
        > li:not(.z-crt) {
            //background: none;
            //color: #999;
            //border-color: transparent;
        }
    }
}



// Extends:         `m-tabs-center`
// ========================================================================

.m-tabs-center {
    .tabs_hd {
        position: relative;
        float: left;
        left: 50%;

        > li {
            position: relative;
            left: -50%;
        }
    }
}

.m-tabs-left {
    position: relative;

    .tabs_hd {
        position: absolute;
        left: 0;
        width: $m-tabs-vertical_hd_li_width;
        margin-left: 0;


        > li {
            float: none;
            border: $border-width-base solid transparent;
            border-right-width: 0;
            margin-bottom: 0;
        }

        > li + li {
            margin-left: 0;
            margin-top: $m-tabs_hd_li_margin;
        }

        > li.z-crt {
            //padding-bottom: 0;
            //margin-right: -$border-width-base;
            //$box-shadow: -3px 0 $brand-primary;
            border-left: 3px solid #d9244e;
            height: 29px;
            line-height: 26px;
            border-top: 1px solid #deeaf2;
            border-bottom: 1px solid #deeaf2;
        }
    }

    .tabs_bd {
        margin-left: $m-tabs-vertical_hd_li_width;
        min-height: 200px;
    }
}

.m-tabs-right {
    position: relative;

    .tabs_hd {
        position: absolute;
        right: 0;
        width: $m-tabs-vertical_hd_li_width;
        margin-left: 0;

        > li {
            float: none;
            border: $border-width-base solid transparent;
            border-left-width: 0;
            margin-bottom: 0;
        }

        > li + li {
            margin-left: 0;
            margin-top: $m-tabs_hd_li_margin;
        }

        > li.z-crt {
            //padding-bottom: 0;
            //padding-left: $m-tabs_hd_li_padding-horizontal + 1px;
            //$box-shadow: 3px 0 $brand-primary;
            border-right: 3px solid #d9244e;
            height: 28px;
            line-height: 26px;
            border-top: 1px solid #deeaf2;
            border-bottom: 1px solid #deeaf2;
        }
    }

    .tabs_bd {
        margin-right: $m-tabs-vertical_hd_li_width;
        min-height: 200px;
    }
}